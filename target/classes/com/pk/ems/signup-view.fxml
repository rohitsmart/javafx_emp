<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import javafx.scene.image.*?>

<GridPane fx:controller="com.pk.ems.auth.AuthController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10"
          vgap="15"
          style="-fx-padding: 40px;">
    <ImageView>
        <image>
            <!-- <Image url="https://perfectkode.com/static/media/logo.ed7cf56626446ad06ce0.png" /> -->
        </image>
    </ImageView>      

    <Label text="Sign Up" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Firstname:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label text="LastName:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Designation:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <ComboBox fx:id="designationComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6" editable="false" disable="true"/>

    <Button text="Signup" onAction="#signup" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <Button text="Cancel" onAction="#cancel" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

</GridPane>